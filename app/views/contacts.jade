.wh-contacts.wh-generic-section.when-shown(ng-controller="ContactsCtrl", id="{{id}}", header-current-section, height-as-window='header')
    ul.wh-generic-section-content(ng-if="contacts.length")
        li(ng-repeat="contact in contacts")
            a.wh-contact.hide-text(ng-href="{{contact.type=='phone'?'tel:':contact.type=='mail'?'mailto:':''}}{{contact.value}}",title="{{contact.value}}",data-wh-icon="{{contact.icon}}",ng-class="contact.type") {{contact.value}}

